{
  "name": "basic-js-api",
  "version": "1.0.0",
  "type": "module",
  "author": "Periscuelo <periscuelo@gmail.com>",
  "scripts": {
    "dev": "node --watch src/server.js",
    "build": "node scripts/obfuscate.js",
    "postinstall": "pnpm run prisma:generate",
    "prisma:deploy": "dotenv -e .env.development -- pnpm exec prisma migrate deploy",
    "prisma:generate": "dotenv -e .env.development -- pnpm exec prisma generate",
    "prisma:migrate": "dotenv -e .env.development -- pnpm exec prisma migrate dev --name",
    "prisma:push": "dotenv -e .env.development -- pnpm exec prisma db push",
    "prisma:reset": "dotenv -e .env.development -- pnpm exec prisma migrate reset",
    "prisma:seed": "dotenv -e .env.development -- node prisma/seed.js",
    "start": "dotenv -e .env.production -- node dist/server.js",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:e2e": "jest --config jest.config.e2e.js --runInBand --detectOpenHandles"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.15 <11"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.7.1",
    "ms": "^2.1.3",
    "pg": "^8.17.2",
    "prisma": "^7.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "babel-jest": "^30.2.0",
    "dotenv-cli": "^11.0.0",
    "javascript-obfuscator": "^5.1.0",
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  }
}
